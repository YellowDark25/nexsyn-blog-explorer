{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    {
      "src": "/sitemap.xml",
      "dest": "/sitemap.xml",
      "headers": { "Content-Type": "application/xml" }
    },
    {
      "src": "/robots.txt",
      "dest": "/robots.txt",
      "headers": { "Content-Type": "text/plain" }
    },
    {
      "src": "^/(.*)",
      "dest": "/index.html"
    }
  ]
}
